<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">
    <changeSet id="025-add-basic-salary-in-payroll-batch" author="payroll-service">
        <comment>Adding new columns 'basic_base_amount' to payroll_batches table.</comment>

        <addColumn tableName="payroll_batches">
            <column name="basic_base_amount" type="NUMERIC(15, 2)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>